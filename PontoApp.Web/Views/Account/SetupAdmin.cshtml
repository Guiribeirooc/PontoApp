@model AdminBootstrapViewModel
@{
    ViewData["Title"] = "Configurar Administrador";
}

<h2>Configurar Administrador</h2>

<div class="alert alert-info">
    Esta etapa só aparece porque ainda não existe nenhum usuário cadastrado.
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="SetupAdmin" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-12">
        <label class="form-label">E-mail (Master)</label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Senha</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Confirmar senha</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Criar administrador</button>
        <a asp-action="Login" class="btn btn-secondary">Voltar ao login</a>
    </div>
</form>
