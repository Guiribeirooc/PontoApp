@{
    ViewData["Title"] = "Login";
}

@section Head {
    <style>
        /* Tamanho do logo na tela de login */
        .login-logo {
            width: min(30vw, 180px);
            height: min(30vw, 180px);
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 12px 32px rgba(0,0,0,.18);
        }

        .login-logo-title {
            font-weight: 700;
            color: #6d2d5d; /* mesmo roxo do tema */
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="w-100" style="max-width:480px;">
        <!-- LOGO MAIOR -->
        <div class="text-center mb-4">
            <img src="/img/easy-ponto-logo.png" alt="Easy Ponto" class="login-logo" />
        </div>

        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-3">Login</h2>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" name="email" class="form-control form-control-sm" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" name="password" class="form-control form-control-sm" required />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="RememberMe" id="remember">
                    <label class="form-check-label" for="remember">Manter conectado</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-2">Entrar</button>

                <div class="text-center">
                    <a asp-action="ForgotPassword">Esqueci minha senha</a> ·
                    <a asp-action="RegisterEmployee">Cadastre-se</a>
                </div>
            </form>
        </div>
    </div>
</div>
