@{
    ViewData["Title"] = "Registros por Mês";
    bool isAdmin = User.IsInRole("Admin");
}

<h2>Registros por Mês</h2>

<form asp-action="Mes" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-3">
        <label class="form-label">Ano</label>
        <input type="number" name="ano" class="form-control" min="2000" max="2100" value="@ViewBag.Ano" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Mês</label>
        <input type="number" name="mes" class="form-control" min="1" max="12" value="@ViewBag.Mes" />
    </div>

    @if (isAdmin)
    {
        <div class="col-md-6">
            <label class="form-label">Colaborador (opcional)</label>
            <select name="employeeId" class="form-select">
                <option value="">Todos</option>
                @if (ViewBag.Employees != null)
                {
                    foreach (var e in (SelectList)ViewBag.Employees)
                    {
                        <option value="@e.Value">@e.Text</option>
                    }
                }
            </select>
        </div>
    }
    else
    {
        <!-- Colaborador comum: não escolhe employeeId (controller força para o logado) -->
        <input type="hidden" name="employeeId" value="" />
    }

    <div class="col-12">
        <button class="btn btn-primary">Ver</button>
    </div>
</form>
